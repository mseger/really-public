<h1>All Feedback</h1>

<% @notes.each do |note| %>
<div id="note">
	<%= truncate note.description, :length => 140 %><br />
	<%= time_ago_in_words note.created_at %> ago<br />
	<%= link_to 'Show', note %>
	<%= link_to 'Edit', edit_note_path(note) %>
	<%= link_to 'Destroy', note, :confirm => 'Are you sure?', :method => :delete %>
</div>
<% end %>
<br />

<%= link_to 'Leave feedback', new_note_path %>
